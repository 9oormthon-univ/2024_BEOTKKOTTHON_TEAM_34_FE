<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.SignInActivity">

    <ImageView
        android:id="@+id/img_log_in_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/img_loginlogo"/>

    <EditText
        android:id="@+id/et_login_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:backgroundTint="#85B5FF"
        app:layout_constraintTop_toBottomOf="@id/img_log_in_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_login_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:backgroundTint="#85B5FF"
        app:layout_constraintTop_toBottomOf="@id/et_login_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_login"
        android:layout_width="314dp"
        android:layout_height="57dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="40dp"
        android:text="로그인"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:background="@drawable/shape_rounded_rect_10dp"
        android:backgroundTint="@color/blue_main"
        app:layout_constraintTop_toBottomOf="@id/et_login_pw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="12dp"
        android:background="@android:color/transparent"
        android:textColor="#85B5FF"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/bt_login"
        app:layout_constraintEnd_toEndOf="@id/bt_login"
        />
</androidx.constraintlayout.widget.ConstraintLayout>