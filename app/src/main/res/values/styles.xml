<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationStyle">
        <item name="android:background">@drawable/shape_top_rounded_20dp</item>
        <item name="itemRippleColor">@null</item>
        <item name="itemIconTint">@color/selector_bottom_navigation_color</item>
        <item name="itemTextColor">@color/selector_bottom_navigation_color</item>
        <item name="itemActiveIndicatorStyle">@android:color/transparent</item>
    </style>
    <style name="TabTheme" parent="Theme.AppCompat.Light">
        <item name="tabIndicatorColor">@color/tab_color</item> <!-- 탭 밑줄 색상 -->
        <item name="tabSelectedTextColor">@android:color/black</item> <!-- 선택된 탭의 글씨 색상 -->
        <item name="tabTextColor">@android:color/black</item> <!-- 탭의 글씨 색상 -->
        <item name="android:background">@android:color/white</item> <!-- 탭바의 배경 색상 -->
        <item name="tabIndicatorHeight">4dp</item> <!-- 탭 밑줄의 높이 -->
    </style>

    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:itemBackground">@color/white</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingStart">2dp</item>
    </style>

    <style name="RoundedCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--  Custom Font  -->
    <style name="customTextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/nanum_square_round_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="customButtonFontStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/nanum_square_round_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="customEditTextFontStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/nanum_square_round_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--  Light  -->
    <style name="customTextViewFontStyle.light">
        <item name="android:fontFamily">@font/nanum_square_round_light</item>
    </style>

    <!--  Regular  -->
    <style name="customTextViewFontStyle.S10">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="customTextViewFontStyle.S10.gray_350">
        <item name="android:textColor">@color/gray_350</item>
    </style>

    <style name="customTextViewFontStyle.S11">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="customTextViewFontStyle.S11.black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="customTextViewFontStyle.S12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="customTextViewFontStyle.S12.white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="customTextViewFontStyle.S13">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="customTextViewFontStyle.S13.black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="customTextViewFontStyle.S16">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="customTextViewFontStyle.S16.black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="customTextViewFontStyle.S20">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="customTextViewFontStyle.S20.black">
        <item name="android:textColor">@color/black</item>
    </style>

    <!--  Bold  -->
    <style name="customTextViewFontStyle.bold">
        <item name="android:fontFamily">@font/nanum_square_round_bold</item>
    </style>

    <style name="customTextViewFontStyle.bold.S16">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="customTextViewFontStyle.bold.S16.black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="customTextViewFontStyle.bold.S16.orange">
        <item name="android:textColor">@color/orange_main</item>
    </style>

    <style name="customTextViewFontStyle.bold.S16.blue_main">
        <item name="android:textColor">@color/blue_main</item>
    </style>

    <style name="customTextViewFontStyle.bold.S18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="customTextViewFontStyle.bold.S18.black">
        <item name="android:textColor">@color/black</item>
    </style>

    <!--  Extra Bold  -->
    <style name="customTextViewFontStyle.extraBold">
        <item name="android:fontFamily">@font/nanum_square_round_extra_bold</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_out</item>
    </style>
</resources>