<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationStyle">
        <item name="android:background">@drawable/shape_top_rounded_20dp</item>
        <item name="itemRippleColor">@null</item>
        <item name="itemIconTint">@color/selector_bottom_navigation_color</item>
        <item name="itemTextColor">@color/selector_bottom_navigation_color</item>
        <item name="itemActiveIndicatorStyle">@android:color/transparent</item>
    </style>
    <style name="TabTheme" parent="Theme.AppCompat.Light">
        <item name="tabIndicatorColor">@color/tab_color</item> <!-- 탭 밑줄 색상 -->
        <item name="tabSelectedTextColor">@android:color/black</item> <!-- 선택된 탭의 글씨 색상 -->
        <item name="tabTextColor">@android:color/black</item> <!-- 탭의 글씨 색상 -->
        <item name="android:background">@android:color/white</item> <!-- 탭바의 배경 색상 -->
        <item name="tabIndicatorHeight">4dp</item> <!-- 탭 밑줄의 높이 -->
    </style>

    <!--  Custom Font  -->
    <style name="customTextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/nanum_square_round_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="customButtonFontStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/nanum_square_round_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="customEditTextFontStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/nanum_square_round_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--  Light  -->
    <style name="customTextViewFontStyle.light">
        <item name="android:fontFamily">@font/nanum_square_round_light</item>
    </style>

    <!--  Regular  -->
    <style name="customTextViewFontStyle.S12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="customTextViewFontStyle.S12.white">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--  Bold  -->
    <style name="customTextViewFontStyle.bold">
        <item name="android:fontFamily">@font/nanum_square_round_bold</item>
    </style>

    <!--  Extra Bold  -->
    <style name="customTextViewFontStyle.extraBold">
        <item name="android:fontFamily">@font/nanum_square_round_extra_bold</item>
    </style>



    <!--  아래 제거 예정  -->

    <style name="textStyleDefault">
    </style>

    <style name="textStyleDefault.16sp">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textStyleDefault.16sp.black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textStyleBold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textStyleBold.20sp">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textStyleBold.20sp.black">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>